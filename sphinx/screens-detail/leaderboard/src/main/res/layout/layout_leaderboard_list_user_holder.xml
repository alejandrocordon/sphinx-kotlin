<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_leaderboard_list_user_holder"
    android:layout_width="match_parent"
    android:layout_height="@dimen/leaderboard_row_height"
    android:background="@color/headerBG"
    android:elevation="4dp"
    tools:ignore="RtlSymmetry">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_leaderboard_holder_avatar"
        android:layout_width="@dimen/leaderboard_row_profile_width"
        android:layout_height="@dimen/leaderboard_row_profile_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_constraint_leaderboard_holder_contact"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/include_leaderboard_holder_initial"
                layout="@layout/layout_chat_image_initial_holder"
                android:layout_width="@dimen/default_chat_initial_image_xy"
                android:layout_height="@dimen/default_chat_initial_image_xy"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_constraint_leaderboard_holder_content"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/leaderboard_row_name_constraint_margin_end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layout_constraint_leaderboard_holder_avatar"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_row_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:singleLine="true"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/leaderboard_row_name_size"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Stephanie" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_constraint_numbers_container"
            android:layout_width="@dimen/leaderboard_row_name_constraint_numbers_width"
            android:layout_height="@dimen/leaderboard_row_name_constraint_numbers_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:visibility="visible">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/row_status_up"
            android:layout_width="@dimen/leaderboard_status_icon_width"
            android:layout_height="@dimen/leaderboard_status_icon_height"
            android:src="@drawable/ic_polygon_up"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/layout_constraint_numbers_container"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/row_status_down"
            android:layout_width="@dimen/leaderboard_status_icon_width"
            android:layout_height="@dimen/leaderboard_status_icon_height"
            android:src="@drawable/ic_polygon_down"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/layout_constraint_numbers_container"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_position_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/leaderboard_row_position_margin_end"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:singleLine="true"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/leaderboard_position_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/row_status_up"
            app:layout_constraintEnd_toStartOf="@+id/row_status_up"
            app:layout_constraintTop_toTopOf="@+id/row_status_up"
            tools:text="1" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_sats_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/leaderboard_row_sats_margin_end"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:singleLine="true"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/leaderboard_row_sats_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_position_number"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="6230" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/body"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>